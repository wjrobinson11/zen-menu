#ingredients-header-container
  %h2
    All Ingredients
#ingredients-main-container
  .row
    .col-lg-12
      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Category
            %th Measurement
            %th{:colspan => "3"}
        %tbody
          - @ingredients.each do |ingredient|
            %tr
              %td= link_to ingredient.name.capitalize, edit_ingredient_path(ingredient), class: 'ingredient-list-name'
              %td= ingredient.category
              %td= ingredient.unit_of_measurement
              %td= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-xs btn-primary'
              %td= link_to 'Delete', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'
      %br
        = link_to '+ New Ingredient', new_ingredient_path, class: 'btn btn-success'
