/   %tbody
/     - @menus.each do |menu|
/       %tr
/         %td= menu.serve_date
/         %td= menu.breakfast_time
/         %td= menu.lunch_time
/         %td= menu.dinner_time
/         %td= menu.breakfast_head_count
/         %td= menu.lunch_head_count
/         %td= menu.dinner_head_count
/         %td= menu.breakfast_recipe_ids
/         %td= menu.dinner_recipe_ids
/         %td= menu.lunch_recipe_ids
/         %td= link_to 'Show', menu
